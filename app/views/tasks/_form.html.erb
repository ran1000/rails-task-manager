<%# called form_for helper %>
<%# !!!  %>
<%= form_for task, :html => {:class => 'd-flex flex-column mb-3', data: { label: 'form-label' }} do |t| %>
  <div class="mb-3">
    <%= t.label :title, class:"form-label" %>
    <%= t.text_field :title, class:"form-control" %>
    <div class="form-text">Choose a short name for your Task</div>
  </div>
    <div class="mb-3">
    <%= t.label :details, class:"form-label" %>
    <%= t.text_field :details, class:"form-control" %>
  </div>
  <div class="mb-3">
    <%= t.label :completed, class: "form-check-label" %>
    <%= t.check_box :completed, class: "form-check-input" %>
  </div>
  <div class="">
    <% if task.id %>
      <%= t.submit "Update Task", class:"btn btn-primary" %>
    <% else %>
      <%= t.submit "Create Task", class:"btn btn-primary" %>
    <% end %>
  </div>
<% end %>
