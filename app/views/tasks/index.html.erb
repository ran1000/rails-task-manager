<h1>Tasks Manager</h1>
<br>
<ul class="task-list">
<% @tasks.each do |task| %>
  <li>
  <%= check_box_tag :completed, 1, data: { "toggle-completed" => task.completed }, class: "form-check-input" %>
  <%= link_to task.title, task_path(task) %>
  <%= link_to task_path(task), data: {turbo_method: :delete, turbo_confirm: "Are you sure?"} do %>
    <i class='fa-regular fa-trash-can'></i>
  <% end %>
  </li>
<% end %>
</ul>
<br>
<%= link_to "Add a new Task", new_path %>
